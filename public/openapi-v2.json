{
  "openapi": "3.0.1",
  "info": {
    "title": "Vercel SQL Relay",
    "version": "1.0",
    "description": "Relay for executing SQL queries via Supabase through Vercel"
  },
  "servers": [
    {
      "url": "https://eidos-sql-relay.vercel.app"
    }
  ],
  "paths": {
    "/api/sql": {
      "post": {
        "operationId": "runSQL",
        "summary": "Execute a raw SQL query through the relay",
        "description": "Accepts a plain text SQL string and returns JSON from Supabase.",
        "requestBody": {
          "required": true,
          "content": {
            "text/plain": {
              "schema": {
                "type": "string",
                "example": "select version();"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Query result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    },
                    "error": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
