{
  "openapi": "3.1.0",
  "info": {
    "title": "Vercel SQL Relay",
    "version": "1.0.0",
    "description": "Submit raw SQL to Supabase via a Vercel relay."
  },
  "servers": [
    {
      "url": "https://eidos-sql-relay.vercel.app",
      "description": "Relay server hosting the SQL endpoint"
    }
  ],
  "paths": {
    "/api/sql": {
      "post": {
        "operationId": "executeSQL",
        "summary": "Execute SQL via relay",
     "requestBody": {
  "required": true,
  "content": {
    "application/json": {
      "schema": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "example": "SELECT table_name FROM information_schema.tables WHERE table_schema = 'public';"
          }
        },
        "required": ["query"]
      }
    }
  }
},
        "responses": {
          "200": {
            "description": "Execution result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    },
                    "error": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
